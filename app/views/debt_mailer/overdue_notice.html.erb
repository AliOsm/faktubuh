<h2><%= t("debt_mailer.greeting", name: @recipient.full_name) %></h2>

<p><%= t("debt_mailer.overdue_notice.body", amount: @installment.amount, currency: @debt.currency) %></p>

<table>
  <tr>
    <td><strong><%= t("debt_mailer.amount_label") %></strong></td>
    <td><%= @installment.amount %> <%= @debt.currency %></td>
  </tr>
  <tr>
    <td><strong><%= t("debt_mailer.installment_due_date_label") %></strong></td>
    <td><%= l(@installment.due_date, format: :long) %></td>
  </tr>
  <tr>
    <td><strong><%= t("debt_mailer.counterparty_label") %></strong></td>
    <td><%= @counterparty.full_name %></td>
  </tr>
</table>

<p>
  <%= link_to t("debt_mailer.view_debt"), debt_url(@debt) %>
</p>

<p><%= t("debt_mailer.sign_off") %></p>
